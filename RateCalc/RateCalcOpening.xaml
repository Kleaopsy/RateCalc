                 Title="RateCalcOpening" Height="600" Width="1100" MinHeight="600" MinWidth="1100" WindowStartupLocation="CenterScreen"
ResizeMode="CanResize"
ShowTitleBar="False"
ShowCloseButton="False"
ShowMinButton="False"
