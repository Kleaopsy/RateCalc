        <Grid SnapsToDevicePixels="True" UseLayoutRounding="True" Grid.Row="0" Background="#FF232736" MouseLeftButtonDown="taskBarDrag_Down" Height="Auto" Width="Auto">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Click="closeBtn_Clicked" Cursor="Hand" Margin="15,0,0,0" Grid.Row="1" Width="15" Height="15" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Rectangle x:Name="rect" RadiusX="8" RadiusY="8" Stroke="#141E36" StrokeThickness="0.1" RenderOptions.BitmapScalingMode="HighQuality" />
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="rect" Property="Fill">
                                                    <Setter.Value>
                                                        <ImageBrush ImageSource="pack://application:,,,/Assets/Icons/closeIconActive.png" Stretch="UniformToFill"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="False">
                                                <Setter TargetName="rect" Property="Fill">
                                                    <Setter.Value>
                                                        <ImageBrush ImageSource="pack://application:,,,/Assets/Icons/closeIcon.png" Stretch="UniformToFill"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Click="minBtn_Clicked" Cursor="Hand" Margin="5,0,0,0" Grid.Row="1" Width="15" Height="15" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Rectangle x:Name="rect" RadiusX="8" RadiusY="8" Stroke="#141E36" StrokeThickness="0.1" RenderOptions.BitmapScalingMode="HighQuality" />
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="rect" Property="Fill">
                                                    <Setter.Value>
                                                        <ImageBrush ImageSource="pack://application:,,,/Assets/Icons/minIconActive.png" Stretch="UniformToFill"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="False">
                                                <Setter TargetName="rect" Property="Fill">
                                                    <Setter.Value>
