                                                        <RowDefinition Height="15*"/>
                                                        <RowDefinition Height="9*"/>
                                                        <RowDefinition Height="15*"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- Icon -->
                                                    <Grid Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Grid.RowSpan="2">
                                                        <StackPanel>
                                                            <Path Data="{DynamicResource home}" Stretch="UniformToFill" HorizontalAlignment="Center">
                                                                <Path.Fill>
                                                                    <SolidColorBrush x:Name="PathFill" Color="White"/>
                                                                </Path.Fill>
                                                            </Path>
                                                        </StackPanel>
                                                    </Grid>

                                                    <!-- Left Border -->
                                                    <Grid Grid.Column="0" Grid.Row="0" Grid.RowSpan="4">
                                                        <Border x:Name="LeftBorder"
                                        Width="5"
                                        Height="35"
                                        Margin="-2,0,0,0"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        CornerRadius="0,50,50,0"
                                        Opacity="0">
                                                            <Border.Background>
                                                                <SolidColorBrush x:Name="BorderColor" Color="Transparent"/>
                                                            </Border.Background>
                                                        </Border>
                                                    </Grid>
                                                </Grid>

                                                <ControlTemplate.Triggers>
                                                    <!-- Tag == active -->
                                                    <Trigger Property="Tag" Value="active">
                                                        <Trigger.EnterActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation Storyboard.TargetName="RootGrid"
                                Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"
                                To="#FF3A3F5A" Duration="0:0:0.2"/>
                                                                    <ColorAnimation Storyboard.TargetName="PathFill"
                                Storyboard.TargetProperty="Color"
                                To="#DA70D6" Duration="0:0:0.2"/>
                                                                    <ColorAnimation Storyboard.TargetName="BorderColor"
                                Storyboard.TargetProperty="Color"
                                To="#DA70D6" Duration="0:0:0.2"/>
                                                                    <DoubleAnimation Storyboard.TargetName="LeftBorder"
                                 Storyboard.TargetProperty="Opacity"
                                 To="1" Duration="0:0:0.2"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.EnterActions>
                                                        <Trigger.ExitActions>
                                                            <BeginStoryboard>
                                                                <Storyboard>
                                                                    <ColorAnimation Storyboard.TargetName="RootGrid"
                                Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"
                                To="#282D40" Duration="0:0:0.01"/>
                                                                    <ColorAnimation Storyboard.TargetName="PathFill"
                                Storyboard.TargetProperty="Color"
                                To="White" Duration="0:0:0.01"/>
                                                                    <ColorAnimation Storyboard.TargetName="BorderColor"
                                Storyboard.TargetProperty="Color"
                                To="Transparent" Duration="0:0:0.01"/>
                                                                    <DoubleAnimation Storyboard.TargetName="LeftBorder"
                                 Storyboard.TargetProperty="Opacity"
                                 To="0" Duration="0:0:0.1"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </Trigger.ExitActions>
                                                    </Trigger>

                                                    <!-- Hover animasyonları (tag boşsa) -->
                                                    <MultiTrigger>
                                                        <MultiTrigger.Conditions>
                                                            <Condition Property="IsMouseOver" Value="True"/>
                                                            <Condition Property="Tag" Value=""/>
                                                        </MultiTrigger.Conditions>
                                                        <MultiTrigger.EnterActions>
