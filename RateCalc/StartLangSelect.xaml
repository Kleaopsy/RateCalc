<mah:MetroWindow x:Class="RateCalc.StartLangSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:RateCalc"
        Title="StartLangSelect"
                 Height="450"
                 Width="400"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="NoResize"
                 ShowTitleBar="False"
                 ShowCloseButton="False"
                 ShowMinButton="False"
                 ShowMaxRestoreButton="False"
                 BorderThickness="0"
                 WindowStyle="SingleBorderWindow"
                 AllowsTransparency="False"
                 GlowBrush="{DynamicResource MahApps.Brushes.GlowAccent}">
    <Grid UseLayoutRounding="True" ClipToBounds="True" Background="{StaticResource SecondDarkBackground}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="300" />
            <RowDefinition Height="120" />
        </Grid.RowDefinitions>
        <Grid SnapsToDevicePixels="True" UseLayoutRounding="True" Grid.Row="0" Background="#FF232736" MouseLeftButtonDown="taskBarDrag_Down" Height="Auto" Width="Auto">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Click="closeBtn_Clicked" Cursor="Hand" Margin="15,0,0,0" Grid.Row="1" Width="15" Height="15" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Rectangle x:Name="rect" RadiusX="8" RadiusY="8" Stroke="#141E36" StrokeThickness="0.1" RenderOptions.BitmapScalingMode="HighQuality" />
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="rect" Property="Fill">
                                                    <Setter.Value>
                                                        <ImageBrush ImageSource="pack://application:,,,/Assets/Icons/closeIconActive.png" Stretch="UniformToFill"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="False">
                                                <Setter TargetName="rect" Property="Fill">
                                                    <Setter.Value>
                                                        <ImageBrush ImageSource="pack://application:,,,/Assets/Icons/closeIcon.png" Stretch="UniformToFill"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Click="minBtn_Clicked" Cursor="Hand" Margin="5,0,0,0" Grid.Row="1" Width="15" Height="15" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Grid>
                                            <Rectangle x:Name="rect" RadiusX="8" RadiusY="8" Stroke="#141E36" StrokeThickness="0.1" RenderOptions.BitmapScalingMode="HighQuality" />
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="rect" Property="Fill">
                                                    <Setter.Value>
                                                        <ImageBrush ImageSource="pack://application:,,,/Assets/Icons/minIconActive.png" Stretch="UniformToFill"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="False">
                                                <Setter TargetName="rect" Property="Fill">
                                                    <Setter.Value>
                                                        <ImageBrush ImageSource="pack://application:,,,/Assets/Icons/minIcon.png" Stretch="UniformToFill"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
        <Border Background="#FF232736" Grid.Row="1" Width="300" Height="225" VerticalAlignment="Bottom" Margin="0,0,0,25" Padding="0" BorderBrush="#FF232736" BorderThickness="1" CornerRadius="8">
            <Grid x:Name="langBtns" Margin="-1,-1,-1,-1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="75"></RowDefinition>
                    <RowDefinition Height="75"></RowDefinition>
                    <RowDefinition Height="75"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"></ColumnDefinition>
                    <ColumnDefinition Width="150"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <!-- Türkçe -->
                <Button Grid.Row="0" Grid.Column="0" Name="tr" ToolTip="Seç"
        BorderBrush="#FF232736" FontFamily="Calibri" FontSize="16" FontWeight="Medium"
        BorderThickness="1,1,0.5,0"
        Click="langButton_Clicked" Tag=""
        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="8,0,0,0">
                                <ContentPresenter Margin="15,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#232736"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>

                                <Trigger Property="Tag" Value="Selected">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="#4CAF50"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>

                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsMouseOver" Value="True"/>
                                        <Condition Property="Tag" Value=""/>
                                    </MultiTrigger.Conditions>
                                    <MultiTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                To="#292C40" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </MultiTrigger.EnterActions>
                                    <MultiTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                To="#232736" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </MultiTrigger.ExitActions>
                                </MultiTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Rectangle Width="40" Height="40" RadiusX="8" RadiusY="8" HorizontalAlignment="Left" Stroke="#141E36" StrokeThickness="0.1" RenderOptions.BitmapScalingMode="HighQuality">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="pack://application:,,,/Assets/Images/trFlag.jpg" Stretch="UniformToFill"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Label Content="Türkçe" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- English -->
                <Button Grid.Row="0" Grid.Column="1" Name="en" ToolTip="Select"
BorderBrush="#FF232736" FontFamily="Calibri" FontSize="16" FontWeight="Medium"
BorderThickness="1,1,0.5,0"
Click="langButton_Clicked" Tag=""
Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            CornerRadius="0,8,0,0">
                                <ContentPresenter Margin="15,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#232736"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>

                                <Trigger Property="Tag" Value="Selected">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="#4CAF50"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>

                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsMouseOver" Value="True"/>
                                        <Condition Property="Tag" Value=""/>
                                    </MultiTrigger.Conditions>
                                    <MultiTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                        To="#292C40" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </MultiTrigger.EnterActions>
                                    <MultiTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                        To="#232736" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </MultiTrigger.ExitActions>
                                </MultiTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Rectangle Width="40" Height="40" RadiusX="8" RadiusY="8" HorizontalAlignment="Left" Stroke="#141E36" StrokeThickness="0.1" RenderOptions.BitmapScalingMode="HighQuality">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="pack://application:,,,/Assets/Images/enFlag.png" Stretch="UniformToFill"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Label Content="English" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Français -->
                <Button Grid.Row="1" Grid.Column="0" Name="fr" ToolTip="Sélectionner"
BorderBrush="#232736" FontFamily="Calibri" FontSize="16" FontWeight="Medium"
BorderThickness="1,1,0.5,0"
Click="langButton_Clicked" Tag=""
Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter Margin="15,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#2E3349"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>

                                <Trigger Property="Tag" Value="Selected">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="#4CAF50"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>

                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsMouseOver" Value="True"/>
                                        <Condition Property="Tag" Value=""/>
                                    </MultiTrigger.Conditions>
                                    <MultiTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                        To="#292C40" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </MultiTrigger.EnterActions>
                                    <MultiTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                        To="#2E3349" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </MultiTrigger.ExitActions>
                                </MultiTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Rectangle Width="40" Height="40" RadiusX="8" RadiusY="8" HorizontalAlignment="Left" Stroke="#141E36" StrokeThickness="0.1" RenderOptions.BitmapScalingMode="HighQuality">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="pack://application:,,,/Assets/Images/frFlag.png" Stretch="UniformToFill"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Label Content="Français" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Deutsch -->
                <Button Grid.Row="1" Grid.Column="1" Name="de" ToolTip="Auswählen"
BorderBrush="#232736" FontFamily="Calibri" FontSize="16" FontWeight="Medium"
BorderThickness="1,1,1,0.5"
Click="langButton_Clicked" Tag=""
Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter Margin="15,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#2E3349"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>

                                <Trigger Property="Tag" Value="Selected">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="#4CAF50"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>

                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsMouseOver" Value="True"/>
                                        <Condition Property="Tag" Value=""/>
                                    </MultiTrigger.Conditions>
                                    <MultiTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                        To="#292C40" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </MultiTrigger.EnterActions>
                                    <MultiTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                        To="#2E3349" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </MultiTrigger.ExitActions>
                                </MultiTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                        <Rectangle Width="40" Height="40" RadiusX="8" RadiusY="8" HorizontalAlignment="Left" Stroke="#141E36" StrokeThickness="0.1" RenderOptions.BitmapScalingMode="HighQuality">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="pack://application:,,,/Assets/Images/deFlag.png" Stretch="UniformToFill"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Label Content="Deutsch" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- Español -->
                <Button Grid.Row="2" Grid.ColumnSpan="2" Name="es" ToolTip="Seleccionar"
BorderBrush="#FF232736" FontFamily="Calibri" FontSize="16" FontWeight="Medium"
BorderThickness="1,0.5,1,1"
Click="langButton_Clicked" Tag=""
Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
            Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            CornerRadius="0,0,8,8">
                                <ContentPresenter Margin="15,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="#232736"/>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Foreground" Value="White"/>
                            <Style.Triggers>

                                <Trigger Property="Tag" Value="Selected">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="#4CAF50"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>

                                <MultiTrigger>
                                    <MultiTrigger.Conditions>
                                        <Condition Property="IsMouseOver" Value="True"/>
                                        <Condition Property="Tag" Value=""/>
                                    </MultiTrigger.Conditions>
                                    <MultiTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                        To="#292C40" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </MultiTrigger.EnterActions>
                                    <MultiTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                        To="#232736" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </MultiTrigger.ExitActions>
                                </MultiTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Width="100">
                        <Rectangle Width="40" Height="40" RadiusX="8" RadiusY="8" HorizontalAlignment="Center" Stroke="#141E36" StrokeThickness="0.1" RenderOptions.BitmapScalingMode="HighQuality">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="pack://application:,,,/Assets/Images/esFlag.jpg" Stretch="UniformToFill"/>
                            </Rectangle.Fill>
                        </Rectangle>
                        <Label Content="Español" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>
        <!-- Select Btn -->
        <Button x:Name="langSelectBtn" Click="langSelectBtn_Clicked"
        Width="120" Height="40" FontFamily="Calibri" FontSize="16" FontWeight="Medium"
        Content="Animated"
        Margin="0,0,0,45"
        Opacity="0"
        Grid.Row="2"
        RenderTransformOrigin="0.5,0.5"
        Tag="">
            <Button.RenderTransform>
                <TranslateTransform X="-100"/>
            </Button.RenderTransform>
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background">
                        <Setter.Value>
                            <SolidColorBrush Color="#F44336"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Opacity" Value="0"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform X="-100"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="Show">
                            <DataTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 To="1" Duration="0:0:0.3"/>
                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.X)"
                                                 To="0" Duration="0:0:0.3"/>
                                        <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                To="#4CAF50" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.EnterActions>
                            <DataTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                 To="0" Duration="0:0:0.3"/>
                                        <DoubleAnimation Storyboard.TargetProperty="RenderTransform.(TranslateTransform.X)"
                                                 To="-100" Duration="0:0:0.3"/>
                                        <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                To="#F44336" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </DataTrigger.ExitActions>
                        </DataTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver" Value="True"/>
                                <Condition Property="Tag" Value="Show"/>
                            </MultiTrigger.Conditions>
                            <MultiTrigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                To="#388E3C" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.EnterActions>
                            <MultiTrigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetProperty="(Background).(SolidColorBrush.Color)"
                                                To="#4CAF50" Duration="0:0:0.3"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </MultiTrigger.ExitActions>
                        </MultiTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>

</mah:MetroWindow>
