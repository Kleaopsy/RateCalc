<mah:MetroWindow x:Class="RateCalc.calcSaveOverrideDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 Title="Confirm" Height="210" Width="400"
                 WindowStartupLocation="CenterOwner" ResizeMode="NoResize"                
                ShowTitleBar="False"
                ShowCloseButton="False"
                ShowMinButton="False"
                ShowMaxRestoreButton="False"
                BorderThickness="0"
                Foreground="White"
                WindowStyle="SingleBorderWindow"
                AllowsTransparency="False"
                 Background="{StaticResource SemiDarkBackground}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#FF232736" MouseLeftButtonDown="taskBarDrag_Down">
            <Label x:Name="lblQuestionTitle" VerticalAlignment="Center"
               Foreground="White" FontSize="12" Margin="0,0,0,0"/>
        </Grid>
        <Label x:Name="lblMessage" Grid.Row="1" 
               Foreground="White" FontSize="12"  Margin="15,10,15,0"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               HorizontalContentAlignment="Center"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="15,20,15,15">
            <Button x:Name="btnYes" Content="Yes" Width="80" Height="30" 
                    Margin="0,0,15,0" IsDefault="True"
                    Background="{StaticResource SemiDarkBackground}"
                    Foreground="White" Click="btnYes_Click"/>
            <Button x:Name="btnNo" Content="No" Width="80" Height="30"
                    IsCancel="True" 
                    Background="{StaticResource SemiDarkBackground}"
                    Foreground="White" Click="btnNo_Click"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>