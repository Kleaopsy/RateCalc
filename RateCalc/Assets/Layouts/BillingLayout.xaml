<UserControl x:Class="RateCalc.Assets.Layouts.BillingLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="770" d:DesignWidth="1020"
    xmlns:System="clr-namespace:System;assembly=System.Runtime">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.05*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="0.2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="10">
            <!-- Billing -->
            <Label Margin="10,10,0,0" FontFamily="Calibri" FontSize="30" FontWeight="Medium" Content="{DynamicResource BillingLayoutLabel1}" Foreground="White" HorizontalAlignment="Left"/>

        </Grid>
        <Grid Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="1" Grid.RowSpan="2">
            <!-- Interest Percent -->
            <StackPanel Orientation="Vertical">
                <StackPanel Height="50" VerticalAlignment="Top" Orientation="Horizontal" Margin="10,0,0,0">
                    <Label FontFamily="Calibri" FontSize="22" FontWeight="Medium" Content="{DynamicResource BillingInterestLabel1}" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                    <RadioButton x:Name="interestMonthly" Margin="10,11,0,0" Height="30" Content="{DynamicResource BillingIntererstInRBox1}" Style="{StaticResource DarkRadioButtonStyle}" GroupName="interestIn" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <RadioButton IsChecked="True" Margin="10,11,0,0" Height="30" Content="{DynamicResource BillingIntererstInRBox2}" Style="{StaticResource DarkRadioButtonStyle}" GroupName="interestIn" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                </StackPanel>
                <TextBox Style="{StaticResource DarkTextBoxStyle}"  x:Name="interestPercent"
                         FontFamily="Calibri" FontWeight="Medium" FontSize="16" Margin="10,10,0,10"
                         Width="350" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left"
                         Tag="{DynamicResource BillingInterestTextBox1}" Text="{DynamicResource BillingInterestTextBox1}"  
                         GotFocus="textBox_Focused" LostFocus="textBox_LostFocus" PreviewKeyDown="interestPercentText_PreviewKeyDown"  PreviewTextInput="interestPercentText_PreviewTextInput"
                         AcceptsReturn="False" TextWrapping="NoWrap"/>
                <Label Margin="10,0,0,0" FontFamily="Calibri" FontSize="22" FontWeight="Medium" Content="{DynamicResource BillingMonthlyInLabel}" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Label x:Name="interestCalcLabel1"
                   Content="{DynamicResource BillingInterestCalcLabel1}"
                   Tag=""
                   Margin="20,0,0,0" Padding="0"
                   Foreground="Red"
                   Visibility="Collapsed"
                   RenderTransformOrigin="0,0">
                    <Label.RenderTransform>
                        <TranslateTransform X="-100"/>
                    </Label.RenderTransform>
                </Label>

                <Label x:Name="interestCalcLabel2"
                   Content="{DynamicResource BillingInterestCalcLabel2}"
                   Tag=""
                   Margin="20,0,0,0" Padding="0"
                   Foreground="Red"
                   Visibility="Collapsed"
                   RenderTransformOrigin="0,0">
                    <Label.RenderTransform>
                        <TranslateTransform X="-100"/>
                    </Label.RenderTransform>
                </Label>

                <TextBox Style="{StaticResource DarkTextBoxStyle}" x:Name="interestCalc"
                         FontFamily="Calibri" FontWeight="Medium" FontSize="16" Margin="10,0,0,0"
                         Width="350" Height="250" HorizontalAlignment="Left"
                         Tag="{DynamicResource BillingMonthlyInTextBox1}" Text="{DynamicResource BillingMonthlyInTextBox1}"  
                         GotFocus="textBox_Focused" LostFocus="textBox_LostFocus"
                         AcceptsReturn="True" TextWrapping="WrapWithOverflow"/>
                <Label Margin="10,10,0,0" FontFamily="Calibri" FontSize="22" FontWeight="Medium" Content="{DynamicResource BillingInterestOutLabel1}" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <StackPanel Height="50" VerticalAlignment="Top" Orientation="Horizontal" Margin="10,0,0,0">
                    <RadioButton x:Name="interestIn" IsChecked="True" Margin="10,11,0,0" Height="30" Content="{DynamicResource BillingInterestOutRBox1}" Style="{StaticResource DarkRadioButtonStyle}" GroupName="interestOut" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                    <RadioButton Margin="10,11,0,0" Height="30" Content="{DynamicResource BillingInterestOutRBox2}" Style="{StaticResource DarkRadioButtonStyle}" GroupName="interestOut" VerticalAlignment="Top" HorizontalAlignment="Left"/>
                </StackPanel>
                <Button x:Name="CalcBtn" VerticalAlignment="Bottom" HorizontalAlignment="Left"
                    Content="{DynamicResource BillingInterestCalcBtn1}"
                    Click="calcBtm_Clicked"
                    Width="100"
                    Height="35"
                    Visibility="Collapsed"
                    Background="#FF4CAF50"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="14"
                    Cursor="Hand"
                    BorderThickness="0"
                    Margin="10,0,15,30"
                    RenderTransformOrigin="0.5,0.5">
                    <Button.RenderTransform>
                        <TranslateTransform x:Name="SaveBtnTranslate" X="-100" />
                    </Button.RenderTransform>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#FF4CAF50" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="8,4">
                                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF388E3C" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
        <Grid Grid.Column="3" Grid.ColumnSpan="1" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="70"/>
            </Grid.RowDefinitions>
            <lvc:CartesianChart
                x:Name="graphics1" Visibility="Hidden"
                Background="{StaticResource SemiDarkBackground}"
                Series="{Binding Series}" Grid.Row="0"
                XAxes="{Binding XAxes}" YAxes="{Binding YAxes}"
                LegendPosition="Bottom"/>
            <DataGrid x:Name="calcResultGrid" Visibility="Hidden"
                  Grid.Row="1"
                  CanUserReorderColumns="False"
                  FontFamily="Calibri"
                  FontWeight="Medium"
                  FontSize="16"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch"
                  IsReadOnly="True"
                  Margin="0,10,0,0"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  CanUserAddRows="False"
                  Background="{StaticResource SemiDarkBackground}"
                  Foreground="White"
                  RowBackground="{StaticResource SemiDarkBackground}"
                  AlternatingRowBackground="{StaticResource SecondDarkBackground}"
                  GridLinesVisibility="None"
                  BorderThickness="0"
                  ColumnHeaderHeight="35"
                  RowHeight="30"
                  ColumnHeaderStyle="{StaticResource DarkDataGridHeaderStyle}"
                  CellStyle="{StaticResource DarkDataGridCellStyle}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{StaticResource CalcDataGrid1Col1}" Binding="{Binding Month}" Width="0.1*" ElementStyle="{StaticResource DarkTextColumnStyle}"/>
                    <DataGridTextColumn Header="{StaticResource CalcDataGrid1Col2}" Binding="{Binding M}" Width="0.19*"  ElementStyle="{StaticResource DarkTextColumnStyle}"/>
                    <DataGridTextColumn Header="{StaticResource CalcDataGrid1Col3}" Binding="{Binding MI}" Width="0.19*"  ElementStyle="{StaticResource DarkTextColumnStyle}"/>
                    <DataGridTextColumn Header="{StaticResource CalcDataGrid1Col4}" Binding="{Binding InterestSum}" Width="0.19*"  ElementStyle="{StaticResource DarkTextColumnStyle}"/>
                    <DataGridTextColumn Header="{StaticResource CalcDataGrid1Col5}" Binding="{Binding NMI}" Width="0.29*" HeaderStyle="{StaticResource LastColumnHeaderStyle}" ElementStyle="{StaticResource DarkTextColumnStyle}"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Vertical" Grid.Row="2">
            <Label x:Name="interestCalcSaveLabel1"
                   Content="{DynamicResource BillingInterestCalcSaveLabel1}"
                   Tag=""
                   Margin="0,10,0,0" Padding="0"
                   Foreground="#FF4CAF50"
                   Visibility="Collapsed"
                   RenderTransformOrigin="0,0">
                <Label.RenderTransform>
                    <TranslateTransform X="-100"/>
                </Label.RenderTransform>
            </Label>
            <Button x:Name="CalcBtnSave" VerticalAlignment="Bottom" HorizontalAlignment="Left"
                Content="{DynamicResource BillingInterestCalcBtnSave1}"
                Click="calcBtmSave_Clicked"
                Width="120" Height="35"
                Visibility="Collapsed"
                Background="#FF4CAF50"
                Foreground="White"
                FontWeight="Bold"
                FontSize="14"
                Cursor="Hand"
                BorderThickness="0"
                Margin="0,5,0,0"
                RenderTransformOrigin="0.5,0.5">
                <Button.RenderTransform>
                    <TranslateTransform x:Name="SaveBtnTranslate2" X="-100" />
                </Button.RenderTransform>
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#FF4CAF50" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" 
                CornerRadius="6" 
                Padding="8,4">
                                        <ContentPresenter HorizontalAlignment="Center"
                              VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF388E3C" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
